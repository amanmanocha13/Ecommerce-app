<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(flash.error.length > 0){ %>
            <div class="user-message user-message--error">
                <%= flash.error[0] %>
            </div>
        <% } %>
        <% if(flash.success.length > 0){ %>
            <div class="user-message">
                <%= flash.success[0] %>
            </div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" 

                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : ''%>"        
                value="<%=oldInput.email%>">
                <span class="form__feedback">
                    <%= validationErrors.find(e => e.param === 'email') ? validationErrors.find(e => e.param === 'email').msg : ''  %>
                </span>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%=oldInput.password%>"
                class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : ''%>"
                >
                <span class="form__feedback">
                    <%= validationErrors.find(e => e.param === 'password') ? validationErrors.find(e => e.param === 'password').msg : ''  %>
                </span>
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" 
                class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>" value="<%= oldInput.confirmPassword %>">
                <span class="form__feedback">
                    <%= validationErrors.find(e => e.param === 'confirmPassword') ? validationErrors.find(e => e.param === 'confirmPassword').msg : ''  %>
                </span>
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>